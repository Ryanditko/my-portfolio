{
  "testEnvironment": "jsdom",
  "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
  "testMatch": [
    "<rootDir>/tests/**/*.test.js",
    "<rootDir>/assets/js/**/*.test.js"
  ],
  "collectCoverageFrom": [
    "assets/js/**/*.js",
    "!assets/js/**/*.min.js",
    "!assets/js/**/*.test.js"
  ],
  "coverageDirectory": "coverage",
  "coverageReporters": ["html", "text", "lcov"],
  "transform": {
    "^.+\\.js$": "babel-jest"
  },
  "moduleFileExtensions": ["js", "json"],
  "verbose": true,
  "testTimeout": 10000
}
